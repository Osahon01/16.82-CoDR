    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug my app",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/82_cpp_opt/build/82opt",  // <--- your exe
            "args": [],                                           // program args if needed
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",          // or "lldb" on macOS if you prefer
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}